<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:src="@drawable/re_problem3"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/sw1"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/switch_off1"
                android:tag="0"/>

            <ImageButton
                android:id="@+id/sw2"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/switch_off1"
                android:tag="0"/>

            <ImageButton
                android:id="@+id/sw3"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/switch_off1"
                android:tag="0"/>

            <ImageButton
                android:id="@+id/sw4"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/switch_off1"
                android:tag="0"/>

            <ImageButton
                android:id="@+id/sw5"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/switch_off1"
                android:tag="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cfbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입력"
                android:textStyle="bold" />

            <Button
                android:id="@+id/clbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>